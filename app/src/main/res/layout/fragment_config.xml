<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/aero_light"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="@dimen/activity_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_ip"
            style="@style/style_config_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/input_ip"
            android:inputType="number"
            android:digits="1234567890."
            android:maxLength="20"/>

        <EditText
            android:id="@+id/et_port"
            style="@style/style_config_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:hint="@string/input_port"
            android:inputType="number"/>

        <!--<EditText-->
            <!--android:id="@+id/et_orgCode"-->
            <!--style="@style/style_config_input"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="50dp"-->
            <!--android:hint="@string/input_org_code"-->
            <!--android:maxLength="10"-->
            <!--android:inputType="number"-->
            <!--android:digits="0123456789" />-->

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_text_height" />

        <TextView
            android:id="@+id/tv_device_info"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_text_height" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                style="@style/style_config_button"
                android:id="@+id/btn_confirm"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="保存"/>

            <Space
                android:layout_width="@dimen/activity_padding"
                android:layout_height="match_parent" />

            <Button
                style="@style/style_config_button"
                android:id="@+id/btn_cancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="取消"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>